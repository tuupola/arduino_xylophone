  <div id="taevas">
    <p><a href="http://www.taevas.ee"><span>www.taevas.ee</span></a></p>
  </div>

  <!-- #container start -->
  <div id="container">
  <div id="containerSpan">

    <!-- #header start -->
    <div id="header">

      <h1><a href="/"><span>Püha Taevas</span></a></h1>
      <div id="intro">
        <h2>“<%= @song.name %>”</h2>
      </div>

    </div>
    <!-- #header end -->

    <!-- #content start -->
    <div id="content">

      <div id="video">
      <div id="videoSpan" title="<%= @song.id %>">

      </div>
      </div>

      <form method="post" action="/greeting">
        <input type="hidden" name="song_id" value="<%= @song.id %>" />
        <div id="pad">
        <div id="padSpan">
        <div id="padSpan2">
          <table width="100%">
            <tr>
              <td width="32%"><label for="fName">Sinu nimi:</label></td>
              <td width="68%"><input type="text" class="text" name="user" id="fName" style="width:165px;" /></td>
            </tr>
            <tr>
              <td width="32%"><label for="fEmail" class="error">Sinu e-post:</label></td>
              <td width="68%"><input type="text" class="text" name="from" id="fEmail" style="width:165px;" /></td>
            </tr>
            <tr>
              <td colspan="2"><label for="fAddresses">Pane siia kirja nende aadressid, keda Püha Instrumendiga valgustada soovid:</label></td>
            </tr>
            <tr>
              <td colspan="2" class="field"><input type="text" class="text" name="to" id="fAddresses" style="width:250px;" /></td>
            </tr>
            <tr>
              <td colspan="2"><label for="fComment">Kui Sul on valgustatutele midagi lisaks öelda, siis siin on koht selle jaoks:</label></td>
            </tr>
            <tr>
              <td colspan="2" class="field"><input type="text" class="text" name="message" id="fComment" style="width:250px;" /></td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td><input type="submit" class="submit" value="Saada" /></td>
            </tr>
          </table>
        </div>
        </div>
        </div>
      </form>

      <div id="corner">
      </div>

      <div id="menu">
      <div id="menuSpan">
        <p>
          <a href="/system/rsync/<%= @song.file_name %>" id="lDownload"><span>Tõmba see Püha Lugu oma raali.</span></a>
          <a href="/song" id="lCreate"><span>Loo uus lugu Taeva Pühal Instrumendil.</span></a>
        </p>
      </div>
      </div>

      <div class="clearer"></div>

    </div>
    <!-- #content end -->

  </div>
  </div>
